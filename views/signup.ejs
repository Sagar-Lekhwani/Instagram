<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Instagram</title>
  <!-- Stylesheet -->
  <link rel="stylesheet" type="text/css" href="../stylesheets/login.css">
  <!-- Font awesome -->
  <script src="https://kit.fontawesome.com/4e6b50c3ce.js" crossorigin="anonymous"></script>
</head>
<body>
  <section class="wrapper">
    <center>
        <div class="right">
            <div class="panel login">
              <img id="logo" src="../images/img/instagram-logo.png" alt="logo">
              <form action="/register" method="post">
                <input
                  class="input-box"
                  type="text"
                  name="email"
                  required
                  placeholder="Phone number or email">
                <input
                  class="input-box"
                  type="text"
                  name="username"
                  required
                  placeholder="Username">
                <input
                  class="input-box"
                  type="text"
                  name="fullname"
                  required
                  placeholder="Full Name ">
                <input
                  class="input-box"
                  type="password"
                  name="password"
                  required
                  placeholder="Password">
                <input
                  class="button"
                  type="submit"
                  name="login"
                  value="Sign Up">
                <div class="divider">
                  <div class="line"></div>
                  <p>OR</p>
                  <div class="line"></div>
                </div>
                <a class="fb" href=#>Log in with Facebook</a>
                <a class="forgot" href=#>Forgot password?</a>
              </form>
            </div>
            <div class="panel signup">
              <p>Have an account?</p>
              <a href='/login2'>Log In</a>
            </div>
            <div class="apps">
              <p>Get the app.</p>
              <div class="app-stores">
                <img src="../images/img/app-store.svg" alt="App Store">
                <img src="../images/img/play-store.svg" alt="Play Store">
              </div>
            </div>
          </div>
    </center>
  </section>
