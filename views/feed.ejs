<% include ./partials/header.ejs %> 
    <div class="container">
        <h4 class="mb-4">Feed</h4>
        <p style="margin-top: -22px;">All posts are shown here</p>
        <hr>
        <% allpost.reverse().forEach(function (post) { %>
            <div class="card" style="width: 18rem;">
                <!-- <img src="..." class="card-img-top" alt="..."> -->
                <div class="card-body">
                  <h5 class="card-title">@<%= post.userid.username %> </h5>
                  <p class="card-text"><%= post.data %></p>
                  <p class="card-text"><%= post.likes.length %> Likes</p>
                  <a href="/like/<%= post._id %>" class="btn <%= post.likes.indexOf(user.id) === -1 ? 'btn-primary' : 'btn-danger' %>"><%= post.likes.indexOf(user.id) === -1 ? "Like" : "Unlike" %></a>
                </div>
              </div>
       <% }) %>
    </div>
<% include ./partials/footer.ejs %>

